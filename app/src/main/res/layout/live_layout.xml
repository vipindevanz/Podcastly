<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:src="@drawable/show" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coin Bureau"
                android:textColor="#5C5858"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:drawableLeft="@drawable/small_mic_icon"
                android:drawablePadding="10dp"
                android:drawableTint="#B6B4B4"
                android:text="Guy the Crypto Guy"
                android:textColor="#B6B4B4"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#D13F3F"
                    android:paddingHorizontal="10dp"
                    android:text="live"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:drawableLeft="@drawable/watch_person_icon"
                    android:drawablePadding="0dp"
                    android:drawableTint="#B6B4B4"
                    android:text="2.2k"
                    android:textColor="#B6B4B4"
                    android:textSize="11dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>